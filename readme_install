sudo apt-get update
sudo apt-get install -y ca-certificates curl gnupg
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | sudo gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg
NODE_MAJOR=20
echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_$NODE_MAJOR.x nodistro main" | sudo tee /etc/apt/sources.list.d/nodesource.list
sudo apt-get install nodejs -y
node -v
npm i aptos
sudo npm install -g pnpm
sudo apt install python3-pip
pip3 install aptos-sdk  ## needed to avoid errors wtih install command pnnpm install ->  'ffi-napi'
git clone https://github.com/aptos-labs/aptos-core.git
cd ~/aptos-core/ecosystem/typescript/sdk/examples/typescript
pnpm run transfer_coin



ubuntu@ip-172-31-46-184:~/aptos-core/ecosystem/typescript/sdk/examples/typescript$ pnpm run transfer_coin

> ts-test@1.0.0 transfer_coin /home/ubuntu/aptos-core/ecosystem/typescript/sdk/examples/typescript
> ts-node transfer_coin.ts

